---
interface Props {
  link?: string;
  size?: 'default' | 'lg';
  variant?: 'default' | 'secondary' | 'outline';
}
const { link, size = 'default', variant = 'default' } = Astro.props;

const isButton = !!link;
---

<button
  class:list={[
    'cursor-pointer rounded-full px-5 py-3 font-base text-sm font-semibold shadow-primary transition-all duration-300 hover:scale-95 hover:shadow-[0px_0px_10px_1px] hover:shadow-primary',
    {
      'px-7 py-3': size === 'lg',
    },
    {
      'bg-primary text-white hover:shadow-primary': variant === 'default',
    },
    {
      'bg-secondary text-white hover:shadow-secondary': variant === 'secondary',
    },
    {
      'border border-primary bg-transparent text-primary hover:bg-primary hover:text-background':
        variant === 'outline',
    },
  ]}
>
  <slot />
</button>
