---
import { Icon } from 'astro-icon/components';

interface Props {
  name: string;
  link: string;
  icon: string;
}

const { icon, link, name } = Astro.props;
---

<a
  class='flex h-full items-center justify-start gap-x-1 rounded-full border border-text bg-transparent px-2 py-1 font-[Inter] text-xs font-semibold text-text no-underline transition-all duration-200 hover:bg-gray-500/20 lg:gap-x-2 lg:px-4 lg:py-2 lg:text-sm'
  aria-label={`link to ${name}`}
  href={link}
  target='_blank'
>
  <Icon
    name={`techs/${icon}`}
    class='aspect-square text-black dark:text-white'
    height={20}
    width={20}
  />
  <span>{name}</span>
</a>
