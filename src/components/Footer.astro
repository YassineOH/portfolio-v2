---
import { Icon } from 'astro-icon/components';
import Heading from './Heading.astro';
import { getLangFromUrl, useTranslation } from '~/lib/i18n';

const lang = getLangFromUrl(Astro.url);

const t = useTranslation(lang);
---

<footer
  class='w-full space-y-6 bg-primary pt-6 text-background dark:text-text lg:pt-12'
>
  <div
    class='mx-auto flex max-w-[720px] flex-col items-center justify-between gap-y-8 px-10 lg:flex-row'
  >
    <Heading tag='h3'><a href='/'> {t('footer.title')} </a></Heading>
    <ul class='flex items-center gap-x-4'>
      <li class=''>
        <a
          target='_blank'
          href='https://github.com/YassineOH'
          aria-label='github link'
        >
          <Icon name='github' width={24} height={24} />
        </a>
      </li>
      <li class=''>
        <a
          target='_blank'
          href='https://www.linkedin.com/in/yassine-ofqir-hamma-52b5a7165/'
          aria-label='linkedin link'
        >
          <Icon name='linkedIn' width={24} height={24} />
        </a>
      </li>
      <li class=''>
        <a href='x.com' aria-label='x link'>
          <Icon name='x' width={24} height={24} />
        </a>
      </li>
      <li class=''>
        <a href='mailto:yassine.yas98@gmail.com' aria-label='gmail'>
          <Icon name='mail' width={24} height={24} />
        </a>
      </li>
    </ul>
  </div>

  <p class='w-full py-1 text-center text-sm italic'>
    {
      lang === 'en'
        ? 'All copy right are reserved  yassineoh 2024;'
        : 'جميع الحقوق محفوظة; yassinoh 2024'
    }
    &copy;
  </p>
</footer>
