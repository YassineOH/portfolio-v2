---
import AnimatedBg from '~/components/AnimatedBg.astro';
import Astrolab from '~/components/Astrolab.astro';
import Button from '~/components/Button.astro';
import TextWrapper from '~/components/TextWrapper.astro';
import Base from '~/layouts/Base.astro';
import { Content as PromoContent } from '~/content/ar/journey.md';
import Heading from '~/components/Heading.astro';
---

<Base pageTitle='ياسين أفقير حما'>
  <AnimatedBg />

  <main
    id='hero'
    class='container mx-auto flex h-screen w-full flex-col items-center justify-center gap-y-20 lg:h-[calc(100vh-100px)] lg:gap-y-24'
  >
    <div class='flex flex-col items-center justify-center gap-y-6'>
      <Heading tag='h1' class='text-center uppercase'>
        ياسين <br class='block lg:hidden' /> أفقير حما
      </Heading>
      <Heading tag='h2' style='h4'>
        أنا
        <span class='rounded-md bg-secondary py-2 text-white'>
          &nbsp;<span id='text'></span><span id='cursor'>|</span>&nbsp;
        </span>
      </Heading>
    </div>
    <Button size='lg' link='#contact' label='تواصل معي'> تواصل معي </Button>
    <Astrolab />
  </main>

  <!-- section 2 -->
  <section class='h-auto w-full py-6 lg:py-40' id='dev-journey-section'>
    <TextWrapper
      articleId='journey'
      class='prose prose-sm prose-h1:prose-2xl dark:prose-invert lg:prose-base prose-h1:font-headings lg:prose-h1:text-3xl'
    >
      <PromoContent />
    </TextWrapper>
  </section>
  <!-- form -->
  <section class='h-auto w-full py-6 lg:py-40'>
    form here
    <div class='h-40'>sdsfds</div>
  </section>
</Base>
