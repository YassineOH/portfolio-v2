---
import Button from '~/components/Button.astro';
import Base from '~/layouts/Base.astro';
---

<Base>
  <main
    class='container mx-auto flex h-[calc(100vh-100px)] w-full flex-col items-center justify-center gap-y-24 lg:gap-y-12'
  >
    <div class='flex flex-col items-center justify-center gap-y-6'>
      <h1
        class='text-center font-headings text-3xl font-bold uppercase lg:text-4xl xl:text-6xl'
      >
        yassine <br class='block lg:hidden' /> ofqir-hamma
      </h1>
      <h2 class='text-base text-gray-400 md:text-lg lg:text-xl xl:text-3xl'>
        I'm a
        <span class='size rounded-md bg-secondary py-0.5 text-white'>
          &nbsp;web developer&nbsp;
        </span>
      </h2>
    </div>
    <Button size='lg'> Get in touch </Button>
  </main>
</Base>
